            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Tidak Ada"
                app:layout_constraintStart_toStartOf="@+id/textView17"
